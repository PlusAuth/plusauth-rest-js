{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declarationMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "declarationDir": "types",
    "alwaysStrict": true,
    "strict": true,
    "useUnknownInCatchVariables": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "typedocOptions": {
    "out": "./docs",
    "readme": "none",
    "categorizeByGroup": false,
    "entryPoints": ["src/index.ts","src/api"],
    "excludeProtected": true,
    "excludePrivate": true,
    "plugin": [
      "typedoc-plugin-merge-modules"
    ]
  }
}
