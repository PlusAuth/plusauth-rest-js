{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "declarationMap": false,
    "declaration": true,
    "resolveJsonModule": true,
    "declarationDir": "types",
    "alwaysStrict": true,
    "strict": true,
    "types": ["@types/node"],
    "useUnknownInCatchVariables": true
  },
  "include": ["src", "types"],
  "exclude": ["**/node_modules", "**/.*/"]
}
