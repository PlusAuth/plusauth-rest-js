{
  "name": "@plusauth/plusauth-rest-js",
  "version": "0.1.0",
  "description": "PlusAuth JavaScript Rest Client",
  "main": "dist/plusauth-rest-js.cjs.js",
  "module": "dist/plusauth-rest-js.esm.js",
  "browser": "dist/plusauth-rest-js.min.js",
  "types": "dist/plusauth-rest-js.d.ts",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Ismail H. Ayaz",
    "email": "ismail.ayaz@ekinokssoftware.com"
  },
  "license": "MIT",
  "scripts": {
    "docs": "rimraf docs && typedoc",
    "build": "rimraf dist && rollup -c && api-extractor run",
    "lint": "eslint ./src --ext .ts --fix",
    "test": "cross-env TS_NODE_PROJECT='test/tsconfig.json' mocha",
    "release": "cross-env GITHUB_TOKEN=$GITHUB_TOKEN release-it"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "isomorphic-unfetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.10",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@microsoft/api-extractor": "^7.13.2",
    "@release-it/conventional-changelog": "^2.0.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node-fetch": "^2.5.8",
    "@types/sinon": "^9.0.11",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "chai": "^4.3.4",
    "core-js": "^3.9.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.22.0",
    "eslint-plugin-import": "^2.22.1",
    "fetch-mock": "^9.11.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.2",
    "moment": "^2.29.1",
    "nock": "^13.0.11",
    "release-it": "^14.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.41.5",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "sinon": "^9.2.4",
    "standard-version": "^9.1.1",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.32",
    "typedoc-plugin-merge-modules": "^2.0.0",
    "typescript": "^4.2.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ],
      "scope-case": [
        0
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
