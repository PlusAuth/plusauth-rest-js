{
  "name": "@plusauth/plusauth-rest-js",
  "version": "0.7.3",
  "description": "PlusAuth JavaScript Rest Client",
  "main": "dist/plusauth-rest-js.cjs.js",
  "module": "dist/plusauth-rest-js.esm.js",
  "browser": "dist/plusauth-rest-js.esm.js",
  "types": "dist/plusauth-rest-js.d.ts",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Ismail H. Ayaz",
    "email": "ismail.ayaz@ekinokssoftware.com"
  },
  "license": "MIT",
  "scripts": {
    "docs": "rimraf docs && typedoc",
    "build": "rimraf dist && rollup -c && api-extractor run",
    "lint": "eslint ./src --ext .ts --fix",
    "test": "cross-env TS_NODE_PROJECT='test/tsconfig.json' mocha",
    "release": "cross-env GITHUB_TOKEN=$GITHUB_TOKEN release-it"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5",
    "deepmerge": "^4.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.2",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@microsoft/api-extractor": "^7.19.4",
    "@release-it/conventional-changelog": "^4.1.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node-fetch": "^3.0.3",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "chai": "^4.3.6",
    "core-js": "^3.21.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-plugin-import": "^2.25.4",
    "fetch-mock": "^9.11.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "mocha": "^9.2.0",
    "moment": "^2.29.1",
    "nock": "^13.2.4",
    "release-it": "^14.12.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.67.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "sinon": "^13.0.1",
    "standard-version": "^9.3.2",
    "ts-node": "^10.5.0",
    "typedoc": "^0.22.11",
    "typedoc-plugin-merge-modules": "^3.1.0",
    "typescript": "4.5.5"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --quiet "
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "dev",
          "test",
          "type"
        ]
      ],
      "header-max-length": [
        0,
        "always",
        100
      ],
      "scope-case": [
        0
      ]
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
