{
  "name": "@plusauth/plusauth-rest-js",
  "version": "0.6.0",
  "description": "PlusAuth JavaScript Rest Client",
  "main": "dist/plusauth-rest-js.cjs.js",
  "module": "dist/plusauth-rest-js.esm.js",
  "browser": "dist/plusauth-rest-js.esm.js",
  "types": "dist/plusauth-rest-js.d.ts",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Ismail H. Ayaz",
    "email": "ismail.ayaz@ekinokssoftware.com"
  },
  "license": "MIT",
  "scripts": {
    "docs": "rimraf docs && typedoc",
    "build": "rimraf dist && rollup -c && api-extractor run",
    "lint": "eslint ./src --ext .ts --fix",
    "test": "cross-env TS_NODE_PROJECT='test/tsconfig.json' mocha",
    "release": "cross-env GITHUB_TOKEN=$GITHUB_TOKEN release-it"
  },
  "dependencies": {
    "cross-fetch": "^3.1.4",
    "deepmerge": "^4.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.14.2",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@microsoft/api-extractor": "^7.15.2",
    "@release-it/conventional-changelog": "^2.0.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node-fetch": "^2.5.10",
    "@types/sinon": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "chai": "^4.3.4",
    "core-js": "^3.11.3",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-plugin-import": "^2.23.3",
    "fetch-mock": "^9.11.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "mocha": "^8.4.0",
    "moment": "^2.29.1",
    "nock": "^13.0.11",
    "release-it": "^14.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.49.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "sinon": "^10.0.0",
    "standard-version": "^9.3.0",
    "ts-node": "^10.0.0",
    "typedoc": "^0.20.36",
    "typedoc-plugin-merge-modules": "^2.0.0",
    "typescript": "4.2.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "dev",
          "test",
          "type"
        ]
      ],
      "header-max-length": [
        0,
        "always",
        100
      ],
      "scope-case": [
        0
      ]
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
