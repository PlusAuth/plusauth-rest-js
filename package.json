{
  "name": "@plusauth/plusauth-rest-js",
  "version": "0.0.2",
  "description": "PlusAuth JavaScript Rest Client",
  "main": "dist/plusauth-rest-js.cjs.js",
  "module": "dist/plusauth-rest-js.esm.js",
  "browser": "dist/plusauth-rest-js.min.js",
  "types": "dist/plusauth-rest-js.d.ts",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Ismail H. Ayaz",
    "email": "ismail.ayaz@ekinokssoftware.com"
  },
  "license": "MIT",
  "scripts": {
    "docs": "rimraf docs && typedoc src/index.ts",
    "build": "rimraf dist && rollup -c && api-extractor run",
    "lint": "eslint ./src --ext .ts --fix",
    "test": "cross-env TS_NODE_PROJECT='test/tsconfig.json' mocha",
    "release": "cross-env GITHUB_TOKEN=$GITHUB_TOKEN release-it"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "isomorphic-unfetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@microsoft/api-extractor": "^7.9.2",
    "@release-it/conventional-changelog": "^1.1.4",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^8.0.1",
    "@types/node-fetch": "^2.5.7",
    "@types/sinon": "^9.0.4",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "chai": "^4.2.0",
    "core-js": "^3.6.5",
    "cross-env": "^7.0.2",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.22.0",
    "fetch-mock": "^9.10.6",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "mocha": "^8.1.1",
    "moment": "^2.27.0",
    "nock": "^13.0.3",
    "release-it": "^13.6.6",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.0",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "sinon": "^9.0.2",
    "standard-version": "^8.0.2",
    "ts-node": "^8.10.2",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        0,
        "always",
        100
      ],
      "scope-case": [
        0
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  }
}
